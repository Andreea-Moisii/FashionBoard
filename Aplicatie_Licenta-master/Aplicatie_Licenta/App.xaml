            <!--styles-->
            <Style x:Key="sLabel" TargetType="Label">
                <Setter Property="FontSize" Value="20" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Foreground" Value="#FFB1B2B8" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>

            <Style x:Key="sInput" TargetType="{x:Type hc:TextBox}" BasedOn="{StaticResource {x:Type hc:TextBox}}">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Foreground" Value="#B1B2B8" />
                <Setter Property="Background" Value="#3D404B" />
                <Setter Property="BorderThickness" Value="1.5" />
                <Setter Property="BorderBrush" Value="#3D404B" />
                <Setter Property="Width" Value="319"/>
                <Setter Property="Height" Value="80"/>
            </Style>

            <Style x:Key="sInputPassword" TargetType="{x:Type hc:PasswordBox}" BasedOn="{StaticResource {x:Type hc:PasswordBox}}">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Foreground" Value="#B1B2B8" />
                <Setter Property="Background" Value="#3D404B" />
                <Setter Property="BorderThickness" Value="1.5" />
                <Setter Property="BorderBrush" Value="#3D404B" />
                <Setter Property="Width" Value="319"/>
                <Setter Property="Height" Value="80"/>
            </Style>

            <Style x:Key="sButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Background" Value="#007D58" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Width" Value="319"/>
                <Setter Property="Height" Value="50"/>
            </Style>

            <Style x:Key="sTextBlock" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource {x:Type TextBlock}}">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Foreground" Value="#B1B2B8" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="left"/>
            </Style>

            <Style x:Key="sTransparentButton" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Padding" Value="0"/>
            </Style>

            <!--coonvertor-->
            <convertors:InverseBooleanConvertor x:Key="cInverseBoolToVisibility" />
            <BooleanToVisibilityConverter x:Key="cBoolToVisibility" />
            <convertors:ViewModelConvertor x:Key="cViewModelToVisability" />

            <!--setting the theme black-->
            <ResourceDictionary.MergedDictionaries>
                <hc:ThemeResources RequestedTheme="Dark" AccentColor="#0067A0"/> 
                <hc:Theme/> 
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
